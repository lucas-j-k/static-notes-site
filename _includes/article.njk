<div class="breadcrumbs">

	{% set crumbs = collections.all | eleventyNavigationBreadcrumb(title) %}

	{% macro renderCrumb(entry) -%}
		<li class="breadcrumbs__item breadcrumbs__item--parent">
		  <a href="{{ entry.url | url }}">{{ entry.title }}</a>
		</li>
	{%- endmacro %}

	<ul class="breadcrumbs__list">
		{%- for entry in crumbs %}{{ renderCrumb(entry) }}{%- endfor -%}
		<li class="breadcrumbs__item breadcrumbs__item--current">{{ title }}</li>
	</ul>

</div>


<div class="contents" id="contents">
	<p class="contents__title" id="contentsTitle"></p>
	<ul class="contents__list" id="contentsList"></ul>
</div>

<div class="article" id="article">
	{{ content | safe }}
</div>

<!-- Import article scripts -->
<script src="/js/article.js"></script>